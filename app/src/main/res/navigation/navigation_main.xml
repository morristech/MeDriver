<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/navigation_main"
	app:startDestination="@id/homeFragment">


	<action android:id="@+id/bottomNavMainHome"
		app:destination="@id/homeFragment"
		app:enterAnim="@anim/fragment_fade_enter"
		app:exitAnim="@anim/fragment_fade_exit"
		/>

	<action android:id="@+id/bottomNavMainCare"
		app:destination="@id/careFragment"
		app:enterAnim="@anim/fragment_fade_enter"
		app:exitAnim="@anim/fragment_fade_exit"
		/>

	<action android:id="@+id/bottomNavMainMyCar"
		app:destination="@id/myCarFragment"
		app:enterAnim="@anim/fragment_fade_enter"
		app:exitAnim="@anim/fragment_fade_exit"
		/>

	<action android:id="@+id/bottomNavMainFuel"
		app:destination="@id/fuelFragment"
		app:enterAnim="@anim/fragment_fade_enter"
		app:exitAnim="@anim/fragment_fade_exit"
		/>

	<action android:id="@+id/bottomNavMainSettings"
		app:destination="@id/settingsFragment"
		app:enterAnim="@anim/fragment_fade_enter"
		app:exitAnim="@anim/fragment_fade_exit"
		/>


	<fragment android:id="@+id/homeFragment"
		android:name="com.mmdev.me.driver.presentation.ui.home.HomeFragment"
		android:label="HomeFragment"
		tools:layout="@layout/fragment_home"
		/>

	<fragment android:id="@+id/careFragment"
		android:name="com.mmdev.me.driver.presentation.ui.care.CareFragment"
		android:label="CareFragment"
		tools:layout="@layout/fragment_care"
		/>

	<fragment android:id="@+id/myCarFragment"
		android:name="com.mmdev.me.driver.presentation.ui.mycar.MyCarFragment"
		android:label="MyCarFragment"
		tools:layout="@layout/fragment_mycar"
		/>

	<fragment android:id="@+id/fuelFragment"
		android:name="com.mmdev.me.driver.presentation.ui.fuel.FuelFragment"
		android:label="FuelFragment"
		tools:layout="@layout/fragment_fuel"
		>
		<action
			android:id="@+id/action_fuelHistory_to_fuelHistoryAdd"
			app:destination="@id/dialogFragmentHistoryAdd"
			app:enterAnim="@anim/fragment_fade_enter"
			app:exitAnim="@anim/fragment_fade_exit"
			/>
	</fragment>

	<fragment android:id="@+id/settingsFragment"
		android:name="com.mmdev.me.driver.presentation.ui.settings.SettingsFragment"
		android:label="SettingsFragment"
		tools:layout="@layout/fragment_settings"
		/>
	
	<dialog android:id="@+id/dialogFragmentHistoryAdd"
		android:name="com.mmdev.me.driver.presentation.ui.fuel.history.DialogFragmentHistoryAdd"
		tools:layout="@layout/fragment_fuel_history_add"
		/>
		



</navigation>