<layout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	>

	<data>
		<variable
			name="bindItem"
			type="com.mmdev.me.driver.domain.fuel.model.FuelPrice"
			/>
	</data>

	<com.google.android.material.card.MaterialCardView

		android:layout_height="wrap_content"
		android:layout_width="match_parent"

		app:cardCornerRadius="12dp"
		app:cardElevation="2dp"

		>


		<androidx.constraintlayout.widget.ConstraintLayout

			android:layout_height="match_parent"
			android:layout_width="match_parent"
			>

			<com.mmdev.me.driver.presentation.ui.common.custom.components.RoundedImageView
				android:id="@+id/ivFuelProviderImg"
				android:layout_width="@dimen/item_fuel_provider_logo_size"
				android:layout_height="@dimen/item_fuel_provider_logo_size"
				android:layout_margin="4dp"

				android:src="@{bindItem.brandIcon, default = `?colorPrimaryVariant`}"

				app:imgCornerRadius="12dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				/>

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvFuelProviderTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"

				android:text="@{bindItem.fuelProviderTitle, default = `Fuel Provider`}"
				android:textAppearance="?textAppearanceSubtitle1"

				app:layout_constraintStart_toEndOf="@id/ivFuelProviderImg"
				app:layout_constraintTop_toTopOf="@id/ivFuelProviderImg"
				/>

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvFuelProviderPrice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"

				android:text="@{bindItem.price+`â‚´`, default = `--.--`}"
				android:textAppearance="?textAppearanceBody1"
				android:textStyle="bold"

				app:layout_constraintStart_toEndOf="@id/tvFuelProviderTitle"
				app:layout_constraintTop_toTopOf="@id/tvFuelProviderTitle"
				app:layout_constraintBottom_toBottomOf="@id/tvFuelProviderTitle"
				/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/btnFuelTypeProviderGas"
				android:layout_width="@dimen/item_fuel_provider_btn_fuel_type_size"
				android:layout_height="@dimen/item_fuel_provider_btn_fuel_type_size"

				android:text="gas"
				android:textSize="12sp"

				style="@style/My.Widget.Button.LetterOnly.Rounded"

				app:backgroundTint="@color/btn_fuel_tint_bg"
				app:iconTint="@color/btn_fuel_tint_text"

				app:layout_constraintStart_toEndOf="@id/ivFuelProviderImg"
				app:layout_constraintEnd_toStartOf="@id/btnFuelTypeProviderDT"
				app:layout_constraintTop_toBottomOf="@id/tvFuelProviderTitle"
				app:layout_constraintBottom_toBottomOf="@id/ivFuelProviderImg"
				/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/btnFuelTypeProviderDT"
				android:layout_width="@dimen/item_fuel_provider_btn_fuel_type_size"
				android:layout_height="@dimen/item_fuel_provider_btn_fuel_type_size"

				android:text="DT"

				android:textSize="12sp"


				style="@style/My.Widget.Button.LetterOnly.Rounded"

				app:layout_constraintStart_toEndOf="@id/btnFuelTypeProviderGas"
				app:layout_constraintEnd_toStartOf="@id/btnFuelTypeProvider92"
				app:layout_constraintTop_toBottomOf="@id/tvFuelProviderTitle"
				app:layout_constraintBottom_toBottomOf="@id/ivFuelProviderImg"
				/>
			
			<com.google.android.material.button.MaterialButton
				android:id="@+id/btnFuelTypeProvider92"
				android:layout_width="@dimen/item_fuel_provider_btn_fuel_type_size"
				android:layout_height="@dimen/item_fuel_provider_btn_fuel_type_size"

				android:text="92"
				android:textSize="12sp"


				style="@style/My.Widget.Button.LetterOnly.Rounded"

				app:layout_constraintStart_toEndOf="@id/btnFuelTypeProviderDT"
				app:layout_constraintEnd_toStartOf="@id/btnFuelTypeProvider95"
				app:layout_constraintTop_toBottomOf="@id/tvFuelProviderTitle"
				app:layout_constraintBottom_toBottomOf="@id/ivFuelProviderImg"
				/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/btnFuelTypeProvider95"
				android:layout_width="@dimen/item_fuel_provider_btn_fuel_type_size"
				android:layout_height="@dimen/item_fuel_provider_btn_fuel_type_size"

				android:text="95"
				android:textSize="12sp"


				style="@style/My.Widget.Button.LetterOnly.Rounded"

				app:layout_constraintStart_toEndOf="@id/btnFuelTypeProvider92"
				app:layout_constraintEnd_toStartOf="@id/btnFuelTypeProvider95PLUS"
				app:layout_constraintTop_toBottomOf="@id/tvFuelProviderTitle"
				app:layout_constraintBottom_toBottomOf="@id/ivFuelProviderImg"
				/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/btnFuelTypeProvider95PLUS"
				android:layout_width="@dimen/item_fuel_provider_btn_fuel_type_size"
				android:layout_height="@dimen/item_fuel_provider_btn_fuel_type_size"

				android:text="95+"
				android:textSize="12sp"


				style="@style/My.Widget.Button.LetterOnly.Rounded"

				app:layout_constraintStart_toEndOf="@id/btnFuelTypeProvider95"
				app:layout_constraintEnd_toStartOf="@id/btnFuelTypeProvider100"
				app:layout_constraintTop_toBottomOf="@id/tvFuelProviderTitle"
				app:layout_constraintBottom_toBottomOf="@id/ivFuelProviderImg"
				/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/btnFuelTypeProvider100"
				android:layout_width="@dimen/item_fuel_provider_btn_fuel_type_size"
				android:layout_height="@dimen/item_fuel_provider_btn_fuel_type_size"

				android:text="100"
				android:textSize="12sp"


				style="@style/My.Widget.Button.LetterOnly.Rounded"

				app:layout_constraintStart_toEndOf="@id/btnFuelTypeProvider95PLUS"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/tvFuelProviderTitle"
				app:layout_constraintBottom_toBottomOf="@id/ivFuelProviderImg"
				/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</com.google.android.material.card.MaterialCardView>
</layout>
