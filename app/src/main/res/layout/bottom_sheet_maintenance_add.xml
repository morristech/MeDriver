<layout
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	>
	
	<data>
		<variable
			name="viewModel"
			type="com.mmdev.me.driver.presentation.ui.maintenance.MaintenanceViewModel"
			/>
	</data>

	<androidx.constraintlayout.motion.widget.MotionLayout
		android:id="@+id/motionMaintenance"
		
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		
		app:layoutDescription="@xml/maintenance_scene"
		>
		
		<!-- drag indicator -->
		<ImageView android:id="@+id/ivTopIndicator"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			
			android:scaleType="centerCrop"
			android:src="@drawable/ic_horizontal_line"
			
			app:layout_constraintWidth_percent="0.1"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@id/guidelineTop"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:contentDescription="@null"
			/>
		
		<!-- Engine -->
		<LinearLayout android:id="@+id/cvEngineNode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginBottom="4dp"
			android:layout_marginEnd="4dp"
			
			android:background="@drawable/view_card_bg_imitation_6_clickable"
			android:orientation="vertical"
			android:padding="4dp"
			
			android:translationX="-300dp"
			
			app:layout_constraintTop_toTopOf="@id/guidelineTop"
			app:layout_constraintBottom_toTopOf="@id/cvTransmissionNode"
			app:layout_constraintStart_toStartOf="@id/guidelineStart"
			app:layout_constraintEnd_toStartOf="@id/guidelineCenterVertical"
			>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvEngineNodeTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:maxLines="1"
				
				android:text="@string/btm_sheet_maintenance_add_engine_title"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceHeadline6"
				
				/>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvEngineNodeComponents"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				
				android:drawableEnd="@drawable/ic_node_engine_48"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:ellipsize="end"
				android:maxLines="5"
				
				android:text="@string/btm_sheet_maintenance_add_engine_components"
				android:textAppearance="?textAppearanceBody2"
				/>
			
			<com.google.android.material.button.MaterialButton
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				
				style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
				/>
		</LinearLayout>
		
		<!-- Transmission -->
		<LinearLayout android:id="@+id/cvTransmissionNode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:layout_marginEnd="4dp"
			
			android:background="@drawable/view_card_bg_imitation_6_clickable"
			android:orientation="vertical"
			android:padding="4dp"
			
			android:translationX="-300dp"
			
			app:layout_constraintTop_toBottomOf="@id/cvEngineNode"
			app:layout_constraintBottom_toTopOf="@id/guidelineCenterHorizontal"
			app:layout_constraintStart_toStartOf="@id/guidelineStart"
			app:layout_constraintEnd_toStartOf="@id/guidelineCenterVertical"
			>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvTransmissionNodeTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:maxLines="1"
				
				android:text="@string/btm_sheet_maintenance_add_transmission_title"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceHeadline6"
				
				/>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvTransmissionNodeComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				
				android:drawableEnd="@drawable/ic_node_transmission_48"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:ellipsize="end"
				android:maxLines="5"
				
				android:text="@string/btm_sheet_maintenance_add_transmission_components"
				android:textAppearance="?textAppearanceBody2"
				/>
		
		</LinearLayout>
		
		<!-- Electronics -->
		<LinearLayout android:id="@+id/cvElectricsNode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:layout_marginEnd="4dp"
			
			android:background="@drawable/view_card_bg_imitation_6_clickable"
			android:orientation="vertical"
			android:padding="4dp"
			
			android:translationX="-300dp"
			
			app:layout_constraintTop_toTopOf="@id/guidelineCenterHorizontal"
			app:layout_constraintBottom_toTopOf="@id/cvSuspensionNode"
			app:layout_constraintStart_toStartOf="@id/guidelineStart"
			app:layout_constraintEnd_toStartOf="@id/guidelineCenterVertical"
			>
		
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvElectricsNodeTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:maxLines="1"
				
				android:text="@string/btm_sheet_maintenance_add_electrics_title"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceHeadline6"
				
				/>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvElectricsNodeComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				
				android:drawableEnd="@drawable/ic_node_electrics_48"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:ellipsize="end"
				android:maxLines="5"
				
				android:text="@string/btm_sheet_maintenance_add_electrics_components"
				android:textAppearance="?textAppearanceBody2"
				/>
			
		</LinearLayout>
		
		<!-- Suspension -->
		<LinearLayout android:id="@+id/cvSuspensionNode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:layout_marginEnd="4dp"
			
			android:background="@drawable/view_card_bg_imitation_6_clickable"
			android:orientation="vertical"
			android:padding="4dp"
			
			android:translationX="-300dp"
			
			app:layout_constraintTop_toBottomOf="@id/cvElectricsNode"
			app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
			app:layout_constraintStart_toStartOf="@id/guidelineStart"
			app:layout_constraintEnd_toStartOf="@id/guidelineCenterVertical"
			
			>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvSuspensionNodeTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:maxLines="1"
				
				android:text="@string/btm_sheet_maintenance_add_suspension_title"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceHeadline6"
				
				/>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvSuspensionNodeComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				
				android:drawableEnd="@drawable/ic_node_suspension_48"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:ellipsize="end"
				android:maxLines="5"
				
				android:text="@string/btm_sheet_maintenance_add_suspension_components"
				android:textAppearance="?textAppearanceBody2"
				/>
		
		</LinearLayout>
		
		<!-- Brakes -->
		<LinearLayout android:id="@+id/cvBrakesNode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginBottom="4dp"
			android:layout_marginStart="4dp"
			
			android:background="@drawable/view_card_bg_imitation_6_clickable"
			android:orientation="vertical"
			android:padding="4dp"
			
			android:translationX="-500dp"
			
			app:layout_constraintTop_toTopOf="@id/guidelineTop"
			app:layout_constraintBottom_toTopOf="@id/cvBodyNode"
			app:layout_constraintStart_toStartOf="@id/guidelineCenterVertical"
			app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
			
			>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvBrakesNodeTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:maxLines="1"
				
				android:text="@string/btm_sheet_maintenance_add_brakes_title"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceHeadline6"
				
				/>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvBrakesNodeComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				
				android:drawableEnd="@drawable/ic_node_brakes_48"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:ellipsize="end"
				android:maxLines="5"
				
				android:text="@string/btm_sheet_maintenance_add_brakes_components"
				android:textAppearance="?textAppearanceBody2"
				/>
		
		</LinearLayout>
		
		<!-- Body -->
		<LinearLayout android:id="@+id/cvBodyNode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:layout_marginStart="4dp"
			
			android:background="@drawable/view_card_bg_imitation_6_clickable"
			android:orientation="vertical"
			android:padding="4dp"
			
			android:translationX="-500dp"
			
			app:layout_constraintTop_toBottomOf="@id/cvBrakesNode"
			app:layout_constraintBottom_toTopOf="@id/guidelineCenterHorizontal"
			app:layout_constraintStart_toStartOf="@id/guidelineCenterVertical"
			app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
			>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvBodyNodeTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:maxLines="1"
				
				android:text="@string/btm_sheet_maintenance_add_vehicle_body_title"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceHeadline6"
				
				/>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvBodyNodeComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				
				android:drawableEnd="@drawable/ic_node_body_48"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:ellipsize="end"
				android:maxLines="5"
				
				android:text="@string/btm_sheet_maintenance_add_vehicle_body_components"
				android:textAppearance="?textAppearanceBody2"
				/>
		
		</LinearLayout>
		
		<!-- Other -->
		<LinearLayout android:id="@+id/cvOtherNode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:layout_marginStart="4dp"
			
			android:background="@drawable/view_card_bg_imitation_6_clickable"
			android:orientation="vertical"
			android:padding="4dp"
			
			android:translationX="-500dp"
			
			app:layout_constraintTop_toBottomOf="@id/guidelineCenterHorizontal"
			app:layout_constraintBottom_toTopOf="@id/cvPlannedNode"
			app:layout_constraintStart_toEndOf="@id/guidelineCenterVertical"
			app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
			>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvOtherNodeTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:maxLines="1"
				
				android:text="@string/btm_sheet_maintenance_add_other_title"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceHeadline6"
				
				/>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvOtherNodeComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				
				android:drawableEnd="@drawable/ic_node_other_48"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:ellipsize="end"
				android:maxLines="5"
				
				android:text="@string/btm_sheet_maintenance_add_other_components"
				android:textAppearance="?textAppearanceBody2"
				/>
		
		</LinearLayout>
		
		<!-- Planned -->
		<LinearLayout android:id="@+id/cvPlannedNode"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="8dp"
			android:layout_marginStart="4dp"
			
			android:background="@drawable/view_card_bg_imitation_6_clickable"
			android:orientation="vertical"
			android:padding="4dp"
			
			android:translationX="-500dp"
			
			app:layout_constraintTop_toBottomOf="@id/cvOtherNode"
			app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
			app:layout_constraintStart_toEndOf="@id/guidelineCenterVertical"
			app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
			>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvPlannedNodeTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:maxLines="1"
				
				android:text="@string/btm_sheet_maintenance_add_planned_title"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceHeadline6"
				
				/>
			
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/tvPlannedNodeComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				
				android:drawableEnd="@drawable/ic_node_planned_48"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:ellipsize="end"
				android:maxLines="5"
				
				android:text="@string/btm_sheet_maintenance_add_planned_components"
				android:textAppearance="?textAppearanceBody2"
				/>
		
		</LinearLayout>
		
		
		
		<com.google.android.material.button.MaterialButton android:id="@+id/btnBack"
			android:layout_width="48dp"
			android:layout_height="48dp"
			
			style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
			
			android:translationX="500dp"
			
			app:icon="@drawable/ic_arrow_left_24"
			
			app:layout_constraintStart_toStartOf="@id/guidelineStart"
			app:layout_constraintEnd_toStartOf="@id/tvToolbarTitle"
			app:layout_constraintTop_toTopOf="@id/tvToolbarTitle"
			app:layout_constraintBottom_toBottomOf="@id/tvToolbarTitle"
			/>
		
		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/tvToolbarTitle"
			android:layout_width="0dp"
			android:layout_height="?actionBarSize"
			android:layout_marginStart="8dp"
			android:gravity="center_vertical"
			
			android:text="dasdasd/"
			android:textAppearance="?textAppearanceHeadline6"
			
			android:translationX="500dp"
			
			app:layout_constraintStart_toEndOf="@id/btnBack"
			app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
			app:layout_constraintTop_toBottomOf="@id/guidelineTop"
			
			/>
		
		<androidx.recyclerview.widget.RecyclerView android:id="@+id/rvNodeChildComponents"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:overScrollMode="never"
			
			android:translationX="500dp"
			
			tools:listitem="@layout/item_single_text"
			app:layout_constraintTop_toBottomOf="@id/tvToolbarTitle"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="@id/guidelineStart"
			app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
			/>
		
		
		
		
		<!-- center vertical -->
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guidelineCenterVertical"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.5"
			/>
		
		<!-- center horizontal -->
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guidelineCenterHorizontal"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.5"
			/>
		
		<!-- guideline top -->
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guidelineTop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_begin="16dp"
			/>
		
		<!-- guideline bottom -->
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guidelineBottom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_end="16dp"
			/>
		
		<!-- guideline start -->
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guidelineStart"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_begin="8dp"
			/>
		
		<!-- guideline end -->
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guidelineEnd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_end="8dp"
			/>
	
	</androidx.constraintlayout.motion.widget.MotionLayout>
	
</layout>