<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	>
	
	<data>
		<import type="com.mmdev.me.driver.presentation.utils.extensions.domain.DistanceBoundExtKt"/>
		<variable
			name="viewModel"
			type="com.mmdev.me.driver.presentation.ui.vehicle.VehicleViewModel"
			/>
	</data>
	
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		>
	
		<androidx.constraintlayout.widget.ConstraintLayout
			
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			>
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/layoutMyCarChooseCar"
				android:layout_height="?actionBarSize"
				android:layout_width="0dp"
				android:background="?colorSurface"
				
				app:boxStrokeWidth="0dp"
				app:hintEnabled="false"
				
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
				
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				>
				
				<com.google.android.material.textfield.MaterialAutoCompleteTextView
					android:id="@+id/dropMyCarChooseCar"
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:cursorVisible="false"
					
					android:focusable="false"
					android:inputType="none"
					android:maxLines="1"
					
					android:text="@string/fg_vehicle_choose_vehicle"
					android:textAppearance="?textAppearanceHeadline6"
					/>
			
			</com.google.android.material.textfield.TextInputLayout>
			
			<!-- cv mileage -->
			<View android:id="@+id/cvMileage"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="4dp"
				
				android:background="@drawable/view_bg_surface_6"
				
				app:layout_constraintTop_toBottomOf="@id/layoutMyCarChooseCar"
				app:layout_constraintBottom_toBottomOf="@id/btnMileageHistory"
				app:layout_constraintEnd_toEndOf="@id/guidelineCenterVertical"
				app:layout_constraintStart_toStartOf="@id/guidelineStart"
				/>
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvMileage"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginHorizontal="16dp"
			
				android:drawableEnd="@drawable/ic_mileage_24"
				
				android:text="@string/fg_vehicle_mileage_card_title"
				android:textAppearance="?textAppearanceBody2"
				
				app:layout_constraintTop_toTopOf="@id/cvMileage"
				app:layout_constraintBottom_toTopOf="@id/tvMileageValue"
				app:layout_constraintStart_toStartOf="@id/cvMileage"
				app:layout_constraintEnd_toEndOf="@id/cvMileage"
				/>
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvMileageValue"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginHorizontal="16dp"
				
				android:gravity="center_vertical"
				android:maxLines="1"
				
				android:text="@{DistanceBoundExtKt.getOdometerFormatted(viewModel.chosenVehicle.odometerValueBound, context)}"
				android:textAppearance="?textAppearanceHeadline4"
				android:textColor="?colorOnSurface"
				android:textStyle="bold"
				
				app:autoSizeTextType="uniform"
				app:autoSizeMinTextSize="14sp"
				app:autoSizeMaxTextSize="28sp"
				
				
				app:layout_constraintTop_toBottomOf="@id/tvMileage"
				app:layout_constraintBottom_toTopOf="@id/btnMileageHistory"
				app:layout_constraintEnd_toEndOf="@id/cvMileage"
				app:layout_constraintStart_toStartOf="@id/cvMileage"
				
				/>
			<com.google.android.material.button.MaterialButton android:id="@+id/btnMileageHistory"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="4dp"
				
				android:text="@string/fg_vehicle_mileage_card_subtitle"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceCaption"
				
				app:cornerRadius="16dp"
				
				style="@style/Widget.MaterialComponents.Button.TextButton"
				
				app:layout_constraintTop_toBottomOf="@id/tvMileageValue"
				app:layout_constraintStart_toStartOf="@id/cvMileage"
				app:layout_constraintEnd_toEndOf="@id/cvMileage"
				
				/>
			
			
			<!-- cv expenses -->
			<View android:id="@+id/cvExpenses"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="8dp"
				android:layout_marginStart="4dp"
				
				android:background="@drawable/view_bg_surface_6"
				
				app:layout_constraintTop_toBottomOf="@id/layoutMyCarChooseCar"
				app:layout_constraintBottom_toBottomOf="@id/btnExpensesHistory"
				app:layout_constraintStart_toStartOf="@id/guidelineCenterVertical"
				app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
				
				/>
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvExpensesTitle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginHorizontal="16dp"
				
				android:drawableEnd="@drawable/ic_hryvnia_24"
				
				android:text="@string/fg_vehicle_expenses_card_title"
				
				android:textAppearance="?textAppearanceBody2"
				
				app:layout_constraintTop_toTopOf="@id/cvExpenses"
				app:layout_constraintBottom_toTopOf="@id/tvExpensesValue"
				app:layout_constraintStart_toStartOf="@id/cvExpenses"
				app:layout_constraintEnd_toEndOf="@id/cvExpenses"
				/>
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvExpensesValue"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginHorizontal="16dp"
				
				android:gravity="center_vertical"
				android:maxLines="1"
				
				android:text="00000.00 â‚´"
				android:textAppearance="?textAppearanceHeadline4"
				android:textColor="?colorOnSurface"
				android:textStyle="bold"
				
				app:autoSizeTextType="uniform"
				app:autoSizeMinTextSize="14sp"
				app:autoSizeMaxTextSize="28sp"
				
				app:layout_constraintTop_toBottomOf="@id/tvExpensesTitle"
				app:layout_constraintBottom_toTopOf="@id/btnExpensesHistory"
				app:layout_constraintStart_toStartOf="@id/cvExpenses"
				app:layout_constraintEnd_toEndOf="@id/cvExpenses"
				
				/>
			<com.google.android.material.button.MaterialButton android:id="@+id/btnExpensesHistory"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="4dp"
				
				android:text="@string/fg_vehicle_expenses_card_subtitle"
				android:textAlignment="center"
				android:textAppearance="?textAppearanceCaption"
				
				app:cornerRadius="16dp"
				
				style="@style/Widget.MaterialComponents.Button.TextButton"
				
				app:layout_constraintTop_toBottomOf="@id/tvExpensesValue"
				app:layout_constraintStart_toStartOf="@id/cvExpenses"
				app:layout_constraintEnd_toEndOf="@id/cvExpenses"
				
				/>
			
			
			<!-- cv Insurance -->
			<View android:id="@+id/cvInsurance"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="8dp"
				
				android:background="@drawable/view_bg_secondary_6"
				
				app:layout_constraintTop_toBottomOf="@id/cvMileage"
				app:layout_constraintBottom_toBottomOf="@id/ivInsuranceIcon"
				app:layout_constraintStart_toStartOf="@id/guidelineStart"
				app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
				
				/>
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvInsuranceTitle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginHorizontal="16dp"
				
				android:text="Insurance"
				android:textAppearance="?textAppearanceSubtitle2"
				android:textColor="?colorOnSecondary"
				
				app:layout_constraintTop_toTopOf="@id/cvInsurance"
				app:layout_constraintBottom_toTopOf="@id/tvInsuranceValue"
				app:layout_constraintStart_toStartOf="@id/cvInsurance"
				app:layout_constraintEnd_toEndOf="@id/cvInsurance"
				/>
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvInsuranceValue"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginHorizontal="16dp"
				
				android:gravity="center_vertical"
				android:maxLines="1"
				
				android:text="PZU"
				android:textAppearance="?textAppearanceHeadline5"
				android:textColor="?colorOnSecondary"
				
				app:autoSizeTextType="uniform"
				app:autoSizeMinTextSize="14sp"
				app:autoSizeMaxTextSize="28sp"
				
				app:layout_constraintTop_toBottomOf="@id/tvInsuranceTitle"
				app:layout_constraintBottom_toTopOf="@id/tvInsuranceSubtitle"
				app:layout_constraintStart_toStartOf="@id/cvInsurance"
				app:layout_constraintEnd_toStartOf="@id/ivInsuranceIcon"
				
				/>
			<ImageView android:id="@+id/ivInsuranceIcon"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="16dp"
				
				android:src="@drawable/ic_insurance_24"
				
				app:layout_constraintTop_toTopOf="@id/cvInsurance"
				app:layout_constraintBottom_toBottomOf="@id/cvInsurance"
				app:layout_constraintEnd_toEndOf="@id/cvInsurance"
				
				android:contentDescription="@null"
				/>
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvInsuranceSubtitle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginHorizontal="16dp"
				
				android:gravity="center_vertical"
				android:maxLines="1"
				
				android:text="Valid until 01.01.1970"
				android:textAppearance="?textAppearanceCaption"
				android:textColor="?colorOnSecondary"
				
				app:layout_constraintTop_toBottomOf="@id/tvInsuranceValue"
				app:layout_constraintStart_toStartOf="@id/cvInsurance"
				app:layout_constraintEnd_toStartOf="@id/ivInsuranceIcon"
				
				/>
			
			
			<!-- cv tires -->
			<View android:id="@+id/cvTires"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="4dp"
				
				android:background="@drawable/view_bg_surface_6"
				
				app:layout_constraintTop_toBottomOf="@id/cvInsurance"
				app:layout_constraintBottom_toBottomOf="@id/viewProgressBottomMargin"
				app:layout_constraintStart_toStartOf="@id/guidelineStart"
				app:layout_constraintEnd_toEndOf="@id/guidelineCenterVertical"
				
				/>
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvTiresWearTitle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginHorizontal="16dp"
				
				android:text="Tires wear"
				android:textAppearance="?textAppearanceBody2"
				
				app:layout_constraintTop_toTopOf="@id/cvTires"
				app:layout_constraintStart_toStartOf="@id/cvTires"
				app:layout_constraintEnd_toEndOf="@id/cvTires"
				/>
			<com.mmdev.me.driver.presentation.ui.common.custom.components.CircularProgressBar
				android:id="@+id/pgTiresWear"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginTop="8dp"
				android:layout_marginHorizontal="16dp"
				
				app:barProgress="50"
				
				app:layout_constraintTop_toBottomOf="@id/tvTiresWearTitle"
				app:layout_constraintBottom_toTopOf="@id/viewProgressBottomMargin"
				app:layout_constraintStart_toStartOf="@id/cvTires"
				/>
			<View android:id="@+id/viewProgressBottomMargin"
				android:layout_width="0dp"
				android:layout_height="16dp"
				
				app:layout_constraintTop_toBottomOf="@id/pgTiresWear"
				app:layout_constraintStart_toStartOf="@id/guidelineStart"
				app:layout_constraintEnd_toEndOf="@id/guidelineCenterVertical"
				
				/>
			<com.google.android.material.button.MaterialButtonToggleGroup android:id="@+id/radioTiresType"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				
				android:orientation="vertical"
				
				app:checkedButton="@id/btnTiresSummer"
				app:selectionRequired="true"
				app:singleSelection="true"
				
				app:layout_constraintTop_toTopOf="@id/pgTiresWear"
				app:layout_constraintBottom_toBottomOf="@id/pgTiresWear"
				app:layout_constraintStart_toEndOf="@id/pgTiresWear"
				app:layout_constraintEnd_toEndOf="@id/cvTires"
				>
			
				<com.google.android.material.button.MaterialButton android:id="@+id/btnTiresSummer"
					android:layout_width="wrap_content"
					android:layout_height="0dp"
					android:layout_weight="1"
					
					app:icon="@drawable/ic_sun_24"
					
					style="@style/My.Widget.Button.IconOnly.Text"
					/>
				<com.google.android.material.button.MaterialButton android:id="@+id/btnTiresWinter"
					android:layout_width="wrap_content"
					android:layout_height="0dp"
					android:layout_weight="1"
					
					app:icon="@drawable/ic_snowflake_24"
					
					style="@style/My.Widget.Button.IconOnly.Text"
					/>
				
			</com.google.android.material.button.MaterialButtonToggleGroup>
			
			
			
			
			
			<!-- vehicle specs card header -->
			<com.google.android.material.textview.MaterialTextView android:id="@+id/tvVehicleSpecsHeader"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:padding="16dp"
				
				android:text="Vehicle specs"
				android:textAppearance="?textAppearanceHeadline6"
				
				app:layout_constraintStart_toStartOf="@id/guidelineStart"
				app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
				app:layout_constraintBottom_toBottomOf="parent"
				/>
			<com.google.android.material.button.MaterialButton android:id="@+id/btnEditVehicleSpecs"
				android:layout_width="48dp"
				android:layout_height="0dp"
				
				app:icon="@drawable/ic_pencil_24"
				app:iconGravity="textEnd"
				app:iconSize="16dp"
				app:cornerRadius="4dp"
				
				style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
				
				app:layout_constraintTop_toTopOf="@id/tvVehicleSpecsHeader"
				app:layout_constraintBottom_toBottomOf="@id/tvVehicleSpecsHeader"
				app:layout_constraintEnd_toEndOf="@id/tvVehicleSpecsHeader"
				/>
			
			<!-- vehicle specs card container imitation -->
			<View android:id="@+id/cvVehicleBoundSpecs"
				android:layout_width="0dp"
				android:layout_height="200dp"
				android:background="@drawable/view_bg_surface_6"
				
				app:layout_constraintStart_toStartOf="@id/guidelineStart"
				app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
				app:layout_constraintTop_toBottomOf="@id/tvVehicleSpecsHeader"
				
				/>
			
			
			
			
			
			<!-- guideline start -->
			<androidx.constraintlayout.widget.Guideline
				android:id="@+id/guidelineStart"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				app:layout_constraintGuide_begin="8dp"
				/>
			<!-- guideline end -->
			<androidx.constraintlayout.widget.Guideline
				android:id="@+id/guidelineEnd"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				app:layout_constraintGuide_end="8dp"
				/>
			<!-- guideline center vertical -->
			<androidx.constraintlayout.widget.Guideline
				android:id="@+id/guidelineCenterVertical"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:orientation="vertical"
				app:layout_constraintGuide_percent="0.5"
				/>
			
			
		</androidx.constraintlayout.widget.ConstraintLayout>
		
	</androidx.core.widget.NestedScrollView>
</layout>