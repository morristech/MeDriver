<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- margin bottom +2 -->
	<!-- Drop Shadow Stack -->
	
	<item>
		<shape>
			<padding android:top="1dp"
				android:right="1dp"
				android:bottom="1dp"
				android:left="1dp" />
			<solid android:color="#0A000000" />
			<corners android:radius="7dp" />
		</shape>
	</item>
	<item>
		<shape>
			<padding android:bottom="1dp" />
			<solid android:color="#25000000" />
			<corners android:radius="6dp" />
		</shape>
	</item>
	
	<!-- Background -->
	<item>
		<shape>
			<solid android:color="@color/surface2dpImitation" />
			<corners android:radius="6dp" />
		</shape>
	</item>
</layer-list>